@model SakraStats.user

@{
    ViewBag.Title = "Logga in";
    Layout ="~/Views/Shared/_Layout.cshtml";
}
<h3> </h3>
@using (Html.BeginForm("Main", "Home"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("Användarnamn")
                @Html.EditorFor(a => a.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(a => a.Username)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("Lösenord")
                @Html.EditorFor(a => a.Pass, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(a => a.Pass)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input name="submit" type="submit" value="Logga in" style="width:300px; background-color:#004387; color:white" class="btn btn-default" />
            </div>
        </div>
    </div>
}



