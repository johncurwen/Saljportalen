@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string checklagerstr = ViewBag.accessid;
    bool seestores = false;
    if (checklagerstr.Substring(checklagerstr.Length-6,6)=="/Lager")
    {
        seestores = true;
    }
}
<h2>
    @ViewBag.name
</h2>
@if (ViewBag.accessid == "Administrator")
{
    using (Html.BeginForm("Main", "Home"))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <input name="submit" type="submit" value="ADMINISTRATOR" style="width:300px; background-color:#004387; color:white" class="btn btn-default" />
                    <br />
                    <input type="text" name="employeeid" value=@ViewBag.employeeid hidden="hidden" />
                    <input type="text" name="accessid" value=@ViewBag.accessid hidden="hidden" />
                    <input type="text" name="branchid" value=@ViewBag.branchid hidden="hidden" />
                </div>
            </div>
        </div>
    }
}
