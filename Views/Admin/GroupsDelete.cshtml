@model SakraStats.group

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this group member?</h3>
@using (Html.BeginForm("Groups", "Admin"))
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Owner")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EmployeeID)
            </dd>

            <dt>
                @Html.DisplayName("Member")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MemberID)
            </dd>

            <dt>
                @Html.DisplayName("Branch")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.employee.BranchID)
            </dd>
        </dl>
            <div class="form-actions no-color">
                <input type="submit" name="submit" value="Delete" class="btn btn-default" />
                <input type="text" name="employeeidstr" value=@ViewBag.employeeidstr hidden="hidden" />
                <input type="text" name="GroupID" value=@ViewBag.groupid hidden="hidden" />
                <input type="text" name="accessidstr" value=@ViewBag.accessidstr hidden="hidden" />
                <input type="text" name="branchidstr" value=@ViewBag.branchidstr hidden="hidden" />
            </div>
    </div>
}
