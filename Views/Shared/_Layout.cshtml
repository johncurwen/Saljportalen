<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SÄKRA LARM - @ViewBag.Title</title>
    <link href=@Url.Content("~/Content/Site.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/Content/bootstrap.min.css") rel="stylesheet" type="text/css" />
    <script src=@Url.Content("~/Scripts/modernizr-2.6.2.js")></script>

    <link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")"
          rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")"
          rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")"
          rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery.ui.core.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DatePickerReady.js")"
            type="text/javascript"></script>
</head>
@{ 
    string action = ViewBag.action;
    string controller = ViewBag.controller;
}
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#004387">
        <div class="container">
            <div id="theheader" class="navbar-header">
                @if (ViewBag.title != "Logga in")
                {
                    <div style="width:100%">
                        @using (Html.BeginForm(action, controller))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })                            
                            if (@ViewBag.buttonvalue == "Avbryt")
                            {
                                <button type="submit" name="submit" title="Avbryt" class="btn btn-default" style="width:60px; height:50px; background-color:indianred; color:white" value="Avbryt">
                                    <img src=@Url.Content("~/Resources/cancel.png") />
                                </button>
                            }
                            else if (@ViewBag.buttonvalue == "Logga ut")
                            {
                                <button type="submit" name="submit" title="Logga ut" class="btn btn-default" style="width:60px; height:50px; background-color:gray; color:white" value="Logga ut">
                                    <img src=@Url.Content("~/Resources/log-out.png") />
                                </button>
                            }
                            else if (@ViewBag.buttonvalue == "Tillbaka")
                            {
                                <button type="submit" name="submit" title="Tillbaka" class="btn btn-default" style="width:60px; height:50px; background-color:gray; color:white" value="Tillbaka">
                                    <img src=@Url.Content("~/Resources/back.png") />
                                </button>
                            }
                            <Label style="color:white;font-size:22px">&#160;&#160;&#160;@ViewBag.title</Label>
                            if (ViewBag.title=="Administrator")
                            {
                                <input type="text" name="employeeid" value=@ViewBag.employeeidstr hidden="hidden" />
                                <input type="text" name="accessid" value=@ViewBag.accessidstr hidden="hidden" />
                                <input type="text" name="branchid" value=@ViewBag.branchidstr hidden="hidden" />
                            }
                            else if (ViewBag.employeeidstr != null && ViewBag.employeeidstr != "")
                            {
                                <input type="text" name="employeeidstr" value=@ViewBag.employeeidstr hidden="hidden" />
                                <input type="text" name="accessidstr" value=@ViewBag.accessidstr hidden="hidden" />
                                <input type="text" name="branchidstr" value=@ViewBag.branchidstr hidden="hidden" />
                            }
                            else
                            {
                                <input type="text" name="employeeid" value=@ViewBag.employeeid hidden="hidden" />
                                <input type="text" name="accessid" value=@ViewBag.accessid hidden="hidden" />
                                <input type="text" name="branchid" value=@ViewBag.branchid hidden="hidden" />
                            }
                            if (@ViewBag.lastpage != null && ViewBag.lastpage != "")
                            {
                                <input type="text" name="lastpage" value=@ViewBag.lastpage hidden="hidden" />
                            }
                            if (@ViewBag.weekstart != null && ViewBag.weekstart.ToString() != "")
                            {
                                <input type="text" name="weekstart" value=@ViewBag.weekstart hidden="hidden" />
                                <input type="text" name="yearstart" value=@ViewBag.yearstart hidden="hidden" />
                                <input type="text" name="weekend" value=@ViewBag.weekend hidden="hidden" />
                                <input type="text" name="yearend" value=@ViewBag.yearend hidden="hidden" />
                            }
                            if (ViewBag.datestart != null)
                            {
                                <input type="text" name="datestart" value=@ViewBag.datestart hidden="hidden" />
                                <input type="text" name="dateend" value=@ViewBag.dateend hidden="hidden" />
                                <input type="text" name="showsellerfromview" value=@ViewBag.showsellerfromview hidden="hidden" />
                            }
                            if (ViewBag.type != null)
                            {
                                <input type="text" name="type" value=@ViewBag.type hidden="hidden" />
                            }
                            if (ViewBag.manager != null)
                            {
                                <input type="text" name="manager" value=@ViewBag.manager hidden="hidden" />
                            }
                        }
                    </div>
                }
                else
                {
                    <div>
                        <img src="~/Resources/logo2.jpg" title="title" alt="additional title" height="60"/>
                        <Label style="color:white;font-size:22px">&#160;&#160;&#160;@ViewBag.title</Label>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Säkra Larm</p>
        </footer>
    </div>
    <script src=@Url.Content("~/Scripts/jquery-1.10.2.min.js")></script>
    <script src=@Url.Content("~/Scripts/bootstrap.min.js")></script>
</body>
<div class="se-pre-con"></div>
</html>